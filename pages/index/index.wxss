/*头部  */

page {
  font-size: 32rpx;
}

.nav {
  height: 90rpx;
  background-color: #0f69dc;
}

.nav .logo {
  width: 244rpx;
  height: 53rpx;
  margin-top: 20rpx;
}

.nav .search {
  height: 66rpx;
  width: 430rpx;
  float: right;
  background: #0c56b4;
  border-radius: 12rpx;
  margin: 12rpx 50rpx 12rpx 0;
}

.nav .s-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 8rpx;
  float: left;
}

.nav .s-text {
  position: relative;
  top: 8rpx;
  font-size: 30rpx;
  color: #fff;
}

.phcolor {
  color: #fff;
}

/*轮播  */

.swiper {
  height: 420rpx;
  width: 100%;
}

.slide-image {
  height: 420rpx;
  width: 100%;
}

/*菜单  */

.menu {
  margin: 60rpx 0;
  display: flex;
  padding: 0 30rpx;
}

.menu-item {
  margin-left: 18rpx;
}

.menu-item image {
  width: 100rpx;
  height: 100rpx;
}

.menu-item text {
  font-size: 36rpx;
  float: left;
  width: 100rpx;
  height: 48rpx;
  text-align: center;
}

/*Floor  */

.fanlan {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.f-nav {
  height: 40rpx;
  width: 95%;
  margin: 10rpx auto;
  display: flex;
}

.f-nav-left {
  width: 400rpx;
}

.floor {
  width: 80rpx;
  height: 40rpx;
  background-color: #137dff;
  text-align: center;
  float: left;
  color: #fff;
}

.f-title {
  color: orangered;
  margin-left: 16rpx;
}

.swiper-tab {
  line-height: 40rpx;
  margin-left: -30rpx;
}

.swiper-tab-list {
  width: 105rpx;
  font-size: 32rpx;
  display: inline-block;
  color: #212121;
}

.f-more {
  width: 130rpx;
  font-size: 24rpx;
}

.on {
  color: orangered;
}

.swiper-box {
  display: block;
  width: 100%;
  height: 400rpx;
}

.f-item {
  display: flex;
}

.f-box {
  width: 351rpx;
  margin: 13rpx;
  overflow: hidden;
}

.f-item  image {
  width: 350rpx;
  height: 240rpx;
}

.f-item .f-tit {
  font-weight: 700;
}

.f-item .f-tbox text {
  width: 240rpx;
  font-size: 24rpx;
  white-space: nowrap;
  line-height: 40rpx;
}

/* 资讯 */
.zixun{
  margin-bottom: 100rpx;
}

.z-nav {
  height: 60rpx;
  display: flex;
  margin-top: 20rpx;
}

.z-nav .z-icon {
  width: 30rpx;
  height: 30rpx;
}

.z-title {
  color: #e51c23;
  font-weight: 700;
  font-size: 36rpx;
  margin-left: 30rpx;
}

.z-menu {
  font-size: 30rpx;
  margin-top: 10rpx;
}

.z-menu text {
  margin-left: 34rpx;
}

.z-more {
  color: #ccc;
  font-size: 24rpx;
  margin-top: 16rpx;
  margin-left: 90rpx;
}

.z-item {
  height: 140rpx;
  border-top: 2rpx solid #ccc;
  padding: 20rpx 30rpx;
}

.z-left {
  float: left;
}

.z-lt {
  height: 98rpx;
  width: 474rpx;
  font-size: 32rpx;
  position: relative;
  max-width: 100%;
  color: #212121;
  overflow: hidden;
}

.z-lb {
  font-size: 28rpx;
  color: #757575;
  display: flex;
}

.z-lb2 {
  margin-left: 26rpx;
}

.z-talk {
  width: 30rpx;
  height: 30rpx;
}

.z-right {
  float: right;
}

.z-right  image {
  width: 186rpx;
  height: 132rpx;
}

/*底部菜单  */

.bottom {
  position: fixed;
  bottom: 0rpx;
  height: 106rpx;
  display: flex;
  width: 100%;
  border-top: 1rpx #ccc solid;
  z-index: 10001;
  background-color: #fff;
}

.b-mitem {
  padding-top: 15rpx;
}

.b-mitem image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 63rpx;
}

.b-mitem text {
  margin-top: -10rpx;
  font-size: 24rpx;
  float: left;
  width: 176rpx;
  height: 24rpx;
  text-align: center;
}

.b-mitem .b-jiahao {
  width: 78rpx;
  height: 78rpx;
}

/*显示隐藏  */

.hide {
  display: none;
}

.show {
  display: block;
}

/* 弹出菜单 */

.bg {
  background-color: #000;
  opacity: 0.3;
  width: 100%;
  height: 750rpx;
  z-index: 10001;
}

.tanchu {
  background-color: #fff;
  opacity: 0.95;
  width: 100%;
  height: 460rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10002;
  padding-bottom: 100rpx;
}

.t-hpic {
  position: absolute;
  left: 40rpx;
  top: -58rpx;
}

.t-hpic image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}

.t-menu {
  margin-top: 20rpx;
  height: 378rpx;
  padding: 20rpx 20rpx 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.t-item {
  padding-top: 15rpx;
  height: 126rpx;
}

.t-item image {
  width: 50rpx;
  height: 50rpx;
  margin-left: 65rpx;
}

.t-item text {
  display: block;
  margin-top: 10rpx;
  font-size: 24rpx;
  width: 176rpx;
  height: 36rpx;
  text-align: center;
  color: #666;
}

.t-close {
  position: absolute;
  left: 46%;
  bottom: 0rpx;
}

.t-close image {
  width: 60rpx;
  height: 60rpx;
}

/* 返回顶部 */

.return {
  position: fixed;
  right: 22rpx;
  bottom: 120rpx;
  z-index: 9999;
  width: 90rpx;
  height: 90rpx;
  background-color: #fff;
  border: 1rpx solid #d2d2d2;
  border-radius: 100%;
  overflow: hidden;
  opacity: 0.8;
}

.returnTop {
  width: 60rpx;
  height: 60rpx;
  margin: 15rpx;
}
