
.container{
  position: relative;
   justify-content: space-between;
  box-sizing: border-box;
  color: #000000;
  
}
.nav{
  height: 1.2rem;
  background: #03a9f4;
  display: flex;
  justify-content: space-between;
  text-align: center;
  padding: 0.5rem 0.5rem 0.5rem 0.9rem;
}
.nav .rtn{
  font-size: 0.8rem;
  color: #fff;
}
.nav .rtn:after {
    content: '';
    align-items: center;
    width: 0.4rem;
    height: 0.4rem;
    position: absolute;
    left: 0.5rem;
    margin-top: 0.3rem;
    background: transparent;
    border: 2px solid #fff;
    border-bottom: none;
    border-left: none;
    -webkit-border-radius: 0;
    border-radius: 0;
    -webkit-transform: rotate(-135deg);
    transform: rotate(-135deg);
}
.nav .pd{
  font-size: 0.9rem;
  color: #fff;
}
.nav .nav-menu{
  
}
.nav .nav-menu image{
  width: 1.5rem;
  height: 1.5rem;
}

.container .nav-menu-content{
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.3;
  position: absolute;
  z-index: 2;
}
.container .nav-menu-content:before {
    content: '';
    align-items: center;
    width: 0.8rem;
    height: 0.8rem;
    position: absolute;
    right: 0.9rem;
    margin-top: 0.2rem;
    background: #fff;
    -webkit-border-radius: 0;
    border-radius: 0;
    -webkit-transform: rotate(-135deg);
    transform: rotate(-135deg);
}
.container .nav-menu-list{
  background: #fff;
  position: absolute;
  top: 2.6rem;
  right: 0.5rem;
  z-index: 3;
  font-size: 0.8rem;
  border-radius: 5px;
  text-align: center;
  overflow: hidden;
}

.container .nav-menu-list .nav-menu-item{
  padding: 0.5rem 1.5rem 0.5rem 0.5rem;
  border-bottom: 1px solid #ccc;
}
.container .nav-menu-list .nav-menu-item:last-child{
  border-bottom: none;
}
.container .nav-menu-list .nav-menu-item:nth-child(1){
  margin-left: -0.6rem;
}
.container .nav-menu-list .nav-menu-item:nth-child(4){
  margin-left: -0.6rem;
}
.container .nav-menu-list .nav-menu-item image{
  width: 0.9rem;
  height: 0.9rem;
  margin-right: 0.2rem;
  margin-bottom: -0.1rem;
}

.channel_list{
  padding-left: 10px;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
}
.channel_list .channel_list_item{
  border-bottom: 1px solid #ebeced;
  display: flex;
  justify-content:space-between;
  animation-iteration-count: center;
  min-height: 2rem;
  font-size: 0.8rem;
  align-items: center;
}
.channel_list .channel_list_item:last-child{
  border: none;
}
.channel_list_item .tli:before {
    content: '';
    align-items: center;
    width: 0.4rem;
    height: 0.4rem;
    position: absolute;
    right: 0.75rem;
    margin-top: 0.3rem;
    background: transparent;
    border: 1px solid #dddddd;
    border-top: none;
    border-right: none;
    -webkit-border-radius: 0;
    border-radius: 0;
    -webkit-transform: rotate(-135deg);
    transform: rotate(-135deg);
}
