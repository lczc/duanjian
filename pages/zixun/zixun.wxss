/* pages/zixun/zixun.wxss */
@import "../template/template.wxss";
page{
  background: #f6f6f6;
}

/* //搜索框 */
.search{
  width: 95%;
  margin:20rpx auto;
  display: flex;
  background: white;
  border-radius: 10rpx;
  height: 72rpx;
}
.sea{
  padding-top: 90rpx;
}
.search .img{
  width: 15%;
  height: 100%;
  text-align: center;
}
.search image{
  width: 40rpx;
  height:40rpx; 
  margin-top:15rpx; 
}
.search input{
  width: 100%;
  height: 100%;
  font-size: 32rpx;
}


/*详细内容  */
.contentt {
  background: white;
    border-top:solid 1rpx #dddddd; 
}
.contentt .xianxi{
  display: flex;
  border-bottom:solid 1rpx #dddddd; 
}
.contentt .xianxi .left{
  width: 30%;
  overflow: hidden;
}
.contentt .xianxi .left image{
  width: 120rpx;
  height:130rpx; 
  margin-left:70rpx; 
}
.contentt .xianxi .right{
  width: 70%;
  flex-direction: row;
}

.contentt .xianxi .right .company{
  font-size: 30rpx;
    color: #757575;
}
.contentt .xianxi .right .name{
  font-size:28rpx;
  margin-top: 30rpx;
  margin-left: 20rpx;

}
.contentt .xianxi .right .keyword{
  font-size:24rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;

}
.foot{
  padding-bottom:384rpx;
}


.page{
  width: 80%;
  margin: 0rpx auto;
  padding: 50rpx 0rpx 20rpx; 
  
}
.page text{
  display: inline-block;
  width: 20%;
  text-align: center;
  font-size: 32rpx;
  z-index: 10000;
}

.action{
 background: #f2f2f2 !important;
}
.btn{
  width: 100%;
  height: 300rpx;
}